{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "react-jsxdev",
    "module": "esnext",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
  },
  "include": [
    "src/"
  ]
}